{{#if navigation.length}}
  <ul class="nav-list">

    {{#each navigation}}
      <li class="nav-item{{#if (eq ./url @root.page.url)}} is-current-page{{/if}}{{#unless ./items.length}} single-page-item{{/unless}}" data-depth="{{or ../level 0}}">
        {{#if ./content}}
          <div class="nav-toggle-row">
          {{#if ./items.length}}
            <button class="nav-item-toggle"></button>
          {{/if}}
          {{#if ./url}}
              <a class="nav-link" href="
        {{~#if (eq ./urlType 'internal')}}
                {{{relativize ./url}}}
              {{~else}}
                {{{./url}}}
              {{~/if}}">
                {{{./content}}}
              </a>
          {{else}}
            <div class="nav-text">{{{./content}}}</div>
          {{/if}}
          </div>
        {{/if}}
        {{> nav-tree navigation=./items level=(increment ../level)}}
      </li>
    {{/each}}

  </ul>
{{/if}}
