<nav class="breadcrumbs" aria-label="breadcrumbs">

  {{#if page.breadcrumbs}}
  <ul>
    {{#with @root.page.component}}
        <li>
            <select id="module" class="inline-select highlight" onchange="window.location = this.value">
                {{#each @root.site.components}}
                    <option value="{{{relativize ./url}}}"
                            {{#if (eq this.name @root.page.component.name)}}selected{{/if}}
                    >{{{./title}}}</option>
                {{/each}}
            </select>
        </li>
    {{/with}}
    {{#each page.breadcrumbs}}
    <li>
    {{~#if (and ./url (eq ./urlType 'internal'))~}}
    <a href="{{{relativize ./url}}}">{{{./content}}}</a>
    {{~else~}}
    {{{./content}}}
    {{~/if~}}
    </li>
    {{/each}}
  </ul>
  {{/if}}
</nav>
